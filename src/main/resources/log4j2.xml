<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <!-- Вивід у консоль (для зручності під час розробки) -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1.} - %m%n%throwable"/>
        </Console>

        <!-- Логи у файл -->
        <File name="FileAppender" fileName="logs/app.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1.} - %m%n%throwable"/>
        </File>

        <!-- SMTP-апендер: надсилає лист при ERROR і вище -->
        <SMTP name="EmailAppender"
              to="yaroslav.basarab@gmail.com"
              from="yaroslav.schedriy@gmail.com"
              subject="CRITICAL error in MavenCW app"
              smtpHost="smtp.gmail.com"
              smtpPort="465"
              smtpProtocol="smtps"
              smtpUsername="yaroslav.schedriy@gmail.com"
              smtpPassword=""
              bufferSize="1"
              smtpDebug="false"
              ignoreExceptions="false">

            <!-- Тіло листа: повідомлення + стек трейc -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c - %m%n%throwable"/>

            <!-- Фільтр: відправляємо тільки ERROR і вище -->
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
        </SMTP>

    </Appenders>

    <Loggers>
        <!-- Логер для всього твого додатку -->
        <Logger name="com.org.insurance" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="EmailAppender"/>
        </Logger>

        <!-- Кореневий логер (на всякий випадок) -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="EmailAppender"/>
        </Root>
    </Loggers>
</Configuration>
